pipeline {
    agent {
        label 'kde_neon'
    }
    environment {
        PATH = "~/.pub-cache/bin:$PATH"
    }
    stages {
        stage('Prepare') {
            steps {
                timeout(time: 15, unit: 'MINUTES') {
                    ansiColor('xterm') {
                        sh 'pub update'
                        sh 'pub global activate grinder'
                    }
                }
            }
        }
        stage('Test') {
            steps {
                ansiColor('xterm') {
                    sh 'grind test'
                }
            }
        }
        stage('Deploy') {
            steps {
                ansiColor('xterm') {
                    sh 'grind deploy'
                }
            }
        }
    }
}
                       