pipeline {
    agent {
        label 'linux'
    }
    stages {
        stage('Prepare') {
            steps {
                timeout(time: 15, unit: 'MINUTES') {
                    ansiColor('xterm') {
                        sh 'pub update'
                    }
                }
            }
        }
        stage('Analyze') {
            steps {
                ansiColor('xterm') {
                    //echo "PATH is: $PATH"
                    sh 'dartanalyzer lib'
                }
            }
        }
        stage('Test') {
            steps {
                ansiColor('xterm') {
                    //echo "PATH is: $PATH"
                    sh 'pub run build_runner test'
                }
            }
        }
        stage('Deploy') {
            steps {
                ansiColor('xterm') {
                    sh 'pub global activate --source path .'
                }
            }
        }
    }
}
                       